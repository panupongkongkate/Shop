@model Shop.Models.Product

<form class="pb-5" method="post">
    <input hidden asp-for="Id" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Title</h1>
                    <p class="text-warning">by MedTangMo</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">@Model.Type</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">List Price: <strike>@Model.Price.ToString("c")</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-6  border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-6  border-bottom">
                                    <div>1-25</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-6">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-6 ">
                                    <div>@Model.Price50.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Detail" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <input hidden asp-for="Id" />
                        <a asp-action="DetailsPost" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-danger form-control  btn-square btn-lg" style="height:50px;">Add To Bag</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>